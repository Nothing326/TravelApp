<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/cardview_booking_width"
    android:layout_height="@dimen/cardview_booking_height"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/margin_xxlarge">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvBookingCircle"
            android:layout_width="@dimen/tv_booking_width"
            android:layout_height="@dimen/tv_booking_height"
            android:text="B"
            android:textSize="@dimen/text_big"
            android:background="@drawable/bg_round"
            android:textAlignment="center"
            android:elevation="@dimen/margin_medium"
            android:layout_margin="@dimen/margin_large"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:textSize="@dimen/text_heading_1x"
            android:layout_toRightOf="@+id/tvBookingCircle"
            android:layout_alignTop="@+id/tvBookingCircle"
            />
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.0/10"
            android:textSize="@dimen/text_small"
            android:layout_toRightOf="@+id/tvBookingCircle"
            android:layout_below="@+id/tvTitle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base on 30 review"
            android:layout_below="@+id/tvBookingCircle"
            android:layout_alignLeft="@+id/tvBookingCircle"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>